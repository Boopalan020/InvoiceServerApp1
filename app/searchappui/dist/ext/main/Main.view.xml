<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:f="sap.f"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="ns.app.searchappui.ext.main.Main">

    <f:DynamicPage
        class="sapUiResponsiveContentPadding"
    >
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                <f:heading>
                    <Title
                        text="Outlook search configuration"
                        level="H2"
                    />
                </f:heading>
                <f:snappedContent>
                    <Text
                        text="{fbConditions>/filtersTextInfo}"
                    />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                pinnable="true"
            >
                <VBox>
                    <macros:FilterBar
                        id="FilterBar1"
                        metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"
                        liveMode="true"
                        search=".handlers.onFiltersChanged"
                        filterChanged=".handlers.onFiltersChanged"
                        showClearButton="false"
                        showMessages="true"
                    />
                </VBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <macros:Table
                metaPath="/Searchheader/@com.sap.vocabularies.UI.v1.LineItem"
                headerVisible="true"
                isSearchable="true"
                selectionMode="Multi"
                type="ResponsiveTable"
                variantManagement="Page"
                enableAutoColumnWidth="true"
                filterBar="FilterBar1"
                header="List of search configuration"
                rowCountMode="Auto"
            />
        </f:content>
    </f:DynamicPage>
</mvc:View>
